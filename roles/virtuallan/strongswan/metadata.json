{
  "name": "strongswan",
  "services": [],
  "resources": [

    {
      "digitalocean_dns": {
        "vpn": {
          "environment": "${environmentName}",
          "droplet": "${instanceName}",
          "domain-id": "${es.fqdn_id}",
          "domain": "${es.fqdn}",
          "a": {
            "name": "vpn",
            "address": "${dollar}{compute_instance.${instanceName}.publicIp}"
          }
        }
      }
    },
    {
      "service_endpoint": {
        "${instanceId}-strongswan": {
          "service": "strongswan",
          "segment":"${segmentId}",
          "type":"services"
        }
      }
    }
  ]
}
