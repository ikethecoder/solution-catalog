{
  "name": "strongswan",
  "services": [],
  "resources": [

    {
      "digitalocean_dns": {
        "vpn": {
          "environment": "${environmentName}",
          "droplet": "${instanceName}",
          "domain-id": "${es.fqdn_id}",
          "domain": "${es.fqdn}",
          "a": {
            "name": "vpn",
            "address": "${d}{digitalocean_droplet.${instanceName}.ipv4_address}"
          }
        }
      }
    },
    {
      "digitalocean_dns": {
        "vpn": {
          "environment": "cd",
          "droplet": "${instanceName}",
          "domain-id": "${es.fqdn_id}",
          "domain": "${es.fqdn}",
          "a": {
            "name": "internal",
            "address": "${d}{digitalocean_droplet.${instanceName}.ipv4_address}"
          }
        }
      }
    },
    {
      "service_endpoint": {
        "${instanceId}-strongswan": {
          "service": "strongswan",
          "segment":"${segmentId}",
          "type":"service"
        }
      }
    }
  ]
}
