{
    "services":[
        {
            "name":"fabio",
            "listener":"pub",
            "port":9998,
            "ssl":false
        }
    ],
    "resources": [
        {
            "digitalocean_dns": {
                "${environmentId}-lb": {
                    "environment": "cd",
                    "droplet": "${instanceName}",
                    "domain-id": "${es.fqdn_id}",
                    "domain": "${es.fqdn}",
                    "a": {
                        "name": "${environmentId}-lb",
                        "address": "${dollar}{var.compute_instance.${instanceName}.publicIp}"
                    }
                }
            }
        },
        {
            "service_endpoint": {
                "${instanceId}-fabio": {
                    "service": "fabio",
                    "instance": "${instanceName}",
                    "environment":"${environmentId}",
                    "segment":"${segmentId}",
                    "type":"console"
                }
            }
        }
    ]
}
