{
  "services": [],
  "resources": [
    {
      "vault_secret": {
        "oauth/clients/2222-0000-0000-0000": {
          "label": "IDE",
          "client_secret": "2222-0000-0000-0001",
          "accessTokenLifetime": 14515200,
          "grants": [ "password", "authorization_code", "refresh_token" ],
          "redirectUris": [ "https://${es.fqdn}/ide/" ]
        }
      }
    },
    {
      "wire": {
        "${instanceId}-ide-tls": {
          "wire": "tls:create",
          "droplet" : "${es.id}-cd-ci-01",
          "environment": "cd",
          "serverNumber": 1,
          "segment": "ci",
          "privateKey": "master_key",
          "name": "ide",
          "cn": "ide.service.dc1.consul"
        },
        "${instanceId}-ide-tls-reg-cert": {
          "wire": "consul:add_keyvalue",
          "droplet" : "${es.id}-cd-ci-01",
          "environment": "cd",
          "serverNumber": 1,
          "segment": "ci",
          "privateKey": "master_key",
          "root":"certs",
          "key":"ide.cert",
          "file":"/var/local/consul/ssl/ide.cert"
        },
        "${instanceId}-ide-tls-reg-key": {
          "wire": "consul:add_keyvalue",
          "droplet" : "${es.id}-cd-ci-01",
          "environment": "cd",
          "serverNumber": 1,
          "segment": "ci",
          "privateKey": "master_key",
          "root":"certs",
          "key":"ide.key",
          "file":"/var/local/consul/ssl/ide.key"
        }
      }
    },
    {
      "service_discovery_service": {
        "${instanceId}-ide": {
          "Name": "ide",
          "Address": "${d}{compute_instance.${instanceName}.privateIp}",
          "Port": 8000,
          "Tags" : [ "${instanceId}", "${environmentId}" ]
        }
      }
    },
    {
      "proxy_service": {
        "${instanceId}-ide": {
          "environment": "cd",
          "serverNumber": 1,
          "segment": "ci",
          "privateKey": "master_key",
          "proxy_ssl_virtual_host": "default",
          "location": "/ide/",
          "template": "ide.tmpl",
          "passthrough": "https://${d}{compute_instance.${instanceName}.privateIp}:8000"
        }
      }
    },
    {
      "service_endpoint": {
        "${instanceId}-ide": {
          "service": "eside",
          "segment":"${segmentId}",
          "secure":"https://${secureDomain}/ide"
        }
      }
    }
  ]
}